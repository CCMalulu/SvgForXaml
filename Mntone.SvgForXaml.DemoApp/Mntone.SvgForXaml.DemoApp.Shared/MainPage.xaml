<Page
	x:Class="Mntone.SvgForXaml.DemoApp.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
	xmlns:svg="using:Mntone.SvgForXaml.UI.Xaml"
	Loaded="OnPageLoaded">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition
				Height="Auto" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition
				Width="80" />
			<ColumnDefinition
				Width="80" />
		</Grid.ColumnDefinitions>

		<svg:SvgImage
			x:FieldModifier="Private"
			x:Name="SvgImageControl"
			Grid.ColumnSpan="3" />

		<TextBox
			x:FieldModifier="Private"
			x:Name="PathTextBox"
			Grid.Row="1"
			IsEnabled="False" />
		<Button
			Grid.Row="1"
			Grid.Column="1"
			Margin="4,0,0,0"
			HorizontalAlignment="Stretch"
			Content="Open…"
			Click="OnOpenClick" />
		<Button
			Grid.Row="1"
			Grid.Column="2"
			Margin="4,0,0,0"
			HorizontalAlignment="Stretch"
			Content="Save…"
			Click="OnSaveClick" />
	</Grid>
</Page>